{
  "parser": "babel-eslint",
  "extends": "react",
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "arrow-parens": ["error", "as-needed"],
    "space-before-function-paren": "off"
  }
}
